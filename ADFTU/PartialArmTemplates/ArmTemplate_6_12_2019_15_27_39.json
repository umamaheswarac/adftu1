{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory Name",
			"defaultValue": "ADFTU"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "[concat(parameters('factoryName'), '/adftu1')]",
			"type": "Microsoft.DataFactory/factories/linkedServices",
			"apiVersion": "2018-06-01",
			"properties": {
				"parameters": {
					"User": {
						"type": "string",
						"defaultValue": "adftu"
					},
					"ServerName": {
						"type": "string",
						"defaultValue": "adftu.database.windows.net"
					},
					"Password": {
						"type": "string",
						"defaultValue": "Sairam143$$"
					},
					"DatabaseName": {
						"type": "string",
						"defaultValue": "adftu"
					}
				},
				"type": "AzureSqlDatabase",
				"typeProperties": {
					"connectionString": {
						"type": "SecureString",
						"value": "**********"
					}
				}
			}
		}
	]
}