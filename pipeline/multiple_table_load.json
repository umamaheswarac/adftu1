											},
											"sink": {
												"name": "title",
												"type": "String"
											}
										},
										{
											"source": {
												"name": "titleofcourtesy",
												"type": "String"
											},
											"sink": {
												"name": "titleofcourtesy",
												"type": "String"
											}
										},
										{
											"source": {
												"name": "birthdate",
