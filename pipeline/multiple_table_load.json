												"type": "DateTime"
											},
											"sink": {
												"name": "hiredate",
												"type": "DateTime"
											}
										},
										{
											"source": {
												"name": "address",
												"type": "String"
											},
											"sink": {
												"name": "address",
												"type": "String"
											}
										},
										{
