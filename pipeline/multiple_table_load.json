{
	"name": "multiple_table_load",
	"properties": {
		"activities": [
			{
				"name": "get_list",
				"type": "Lookup",
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"typeProperties": {
					"source": {
						"type": "AzureSqlSource",
						"sqlReaderQuery": "select tblName from [dbo].[table_list]"
					},
					"dataset": {
						"referenceName": "tbl_list",
						"type": "DatasetReference"
					},
					"firstRowOnly": false
				}
			},
			{
				"name": "load_data",
				"type": "ForEach",
				"dependsOn": [
					{
						"activity": "get_list",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"typeProperties": {
					"items": {
						"value": "@activity(get_list).output.value",
						"type": "Expression"
					},
					"isSequential": true,
					"activities": [
						{
							"name": "tbl_load",
							"type": "Copy",
							"policy": {
								"timeout": "7.00:00:00",
								"retry": 0,
								"retryIntervalInSeconds": 30,
								"secureOutput": false,
								"secureInput": false
							},
							"typeProperties": {
								"source": {
									"type": "SqlServerSource",
									"sqlReaderQuery": "select * from @{item().tblName"
								},
								"sink": {
									"type": "AzureSqlSink"
								},
								"enableStaging": false,
								"translator": {
									"type": "TabularTranslator",
									"mappings": [
										{
											"source": {
												"name": "empid",
												"type": "Int32"
											},
											"sink": {
												"name": "empid",
												"type": "Int32"
											}
										},
										{
											"source": {
